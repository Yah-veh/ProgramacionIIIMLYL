
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <TextView
        android:text="Parqueo Univalle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitulo" />
    <Button
        android:text="Ingreso de Vehiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/textView1"
        android:id="@+id/btnIngresar"
        android:layout_below="@id/txtTitulo"/>
    <Button
        android:text="Salida de Vehiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSalida"
        android:layout_below="@id/btnIngresar"/>
    <Button
        android:text="Mostrar Vehiculos Actuales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnActuales"
        android:layout_below="@id/btnSalida"/>
    <Button
        android:text="Historial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnHistorial"
        android:layout_below="@id/btnActuales"/>






</RelativeLayout>